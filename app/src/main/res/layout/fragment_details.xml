<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.DetailsFragment">

        <ImageView
            android:id="@+id/imvPokemon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_pikachu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/hp_background"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="@dimen/padding_10"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/size_20"
                android:textStyle="bold"
                tools:text="HP 45" />

            <TextView
                android:id="@+id/tvAttack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/attack_background"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="@dimen/padding_10"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/size_20"
                android:textStyle="bold"
                tools:text="Attack 48" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDefense"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/defense_background"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="@dimen/padding_10"
                android:text="Defense 43"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/size_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/speed_background"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="@dimen/padding_10"
                android:text="Attack 48"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/size_20"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</layout>