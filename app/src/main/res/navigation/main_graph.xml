<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.jccsisc.pokedex.ui.fragments.ListFragment"
        android:label="ListFragment" >
        <action
            android:id="@+id/action_listFragment_to_detailFragmentPokemon"
            app:destination="@id/detailFragmentPokemon" />
    </fragment>
    <fragment
        android:id="@+id/detailFragmentPokemon"
        android:name="com.jccsisc.pokedex.ui.fragments.DetailFragmentPokemon"
        android:label="DetailFragmentPokemon" >
        <argument
            android:name="pokemon"
            app:argType="com.jccsisc.pokedex.PokemonModel" />
    </fragment>
</navigation>